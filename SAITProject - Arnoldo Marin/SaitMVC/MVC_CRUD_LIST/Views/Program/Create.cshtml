@model MVC_CRUD_LIST.Models.SaitPrograms

@{
    ViewBag.Title = "Create";
}

<link rel="stylesheet" href="~/Content/Create.css" />



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form form-horizontal">
        <h3 class="create-title">Add a New Program</h3>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.ProgramID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProgramID)
                @Html.ValidationMessageFor(model => model.ProgramID)
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-2">Program Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProgramName)
                @Html.ValidationMessageFor(model => model.ProgramName)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Program Priority</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProgramPriority)
                @Html.ValidationMessageFor(model => model.ProgramPriority)
            </div>
        </div>

        <div class="form-group">
            <label class = "control-label col-md-2">Program Status</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProgramStatus)
                @Html.ValidationMessageFor(model => model.ProgramStatus)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-primary" />
                <button class="btn btn-default">
                    @Html.ActionLink("Back to List", "Index")
                </button>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
